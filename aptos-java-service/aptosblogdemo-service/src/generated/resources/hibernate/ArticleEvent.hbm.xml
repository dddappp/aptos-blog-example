<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"[]>
<hibernate-mapping package="org.test.aptosblogdemo.domain.article">
  <class name="AbstractArticleEvent" table="article_event" abstract="true">
    <composite-id name="articleEventId" class="org.test.aptosblogdemo.domain.article.ArticleEventId">
      <key-property name="id">
        <column name="id" sql-type="VARCHAR(66)" />
      </key-property>
      <key-property name="version">
        <column name="version" sql-type="DECIMAL(20,0)" />
      </key-property>
    </composite-id>
    <discriminator column="event_class" type="string" />
    <property name="createdBy" column="created_by" />
    <property name="createdAt" column="created_at" />
    <property name="commandId" column="command_id" />
    <property name="aptosEventVersion">
      <column name="aptos_event_version" sql-type="DECIMAL(20,0)" />
    </property>
    <property name="aptosEventSequenceNumber">
      <column name="aptos_event_sequence_number" sql-type="DECIMAL(20,0)" />
    </property>
    <property name="aptosEventType">
      <column name="aptos_event_type" length="500" />
    </property>
    <component name="aptosEventGuid" class="org.test.aptosblogdemo.domain.AptosEventGuid">
      <property name="creationNumber">
        <column name="aptos_event_guid_creation_number" sql-type="DECIMAL(20,0)" />
      </property>
      <property name="accountAddress">
        <column name="aptos_event_guid_account_address" sql-type="VARCHAR(66)" />
      </property>
    </component>
    <property name="status">
      <column name="status" sql-type="CHAR(1)" />
    </property>
    <property name="commandType" column="command_type" length="50" />
    <subclass name="AbstractArticleEvent$ArticleClobEvent" discriminator-value="ArticleClobEvent">
      <property name="dynamicPropertiesLob">
        <column name="dynamic_properties_lob" sql-type="VARCHAR(2000)" />
      </property>
      <subclass name="AbstractArticleEvent$ArticleCreated" discriminator-value="ArticleCreated" />
      <subclass name="AbstractArticleEvent$ArticleUpdated" discriminator-value="ArticleUpdated" />
      <subclass name="AbstractArticleEvent$ArticleDeleted" discriminator-value="ArticleDeleted" />
      <subclass name="AbstractArticleEvent$CommentAdded" discriminator-value="CommentAdded" />
      <subclass name="AbstractArticleEvent$CommentUpdated" discriminator-value="CommentUpdated" />
      <subclass name="AbstractArticleEvent$CommentRemoved" discriminator-value="CommentRemoved" />
    </subclass>
  </class>
</hibernate-mapping>
